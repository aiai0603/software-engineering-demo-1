/* pages/score/score.wxss */
page{
  background-color: #f4eaea;

}

.main{
  background-color: #f21515;
  height: 300rpx;
  display: flex;
  flex-flow: row;
  justify-content: space-between;
  align-items: center;
  padding: 0rpx 50rpx;
  color: white;
}

.score{
  font-size: 90rpx;
  font-weight: 800;
}

.button{
  border: white 2rpx solid;
  border-radius: 30%;
  padding: 20rpx 50rpx;
  font-weight: 800;
  margin-bottom: 20rpx;
}

.card{
  
  display: flex;
  flex-flow: row;
  justify-content: space-between;
  align-items: center;
  width: 80%;
  padding: 30rpx 30rpx;
  border-bottom: #cccccc 1px solid;
}


.card-group{
  background-color: white;
  border-radius: 5%;
  width: 95%;
  margin:20rpx;
  display: flex;
  flex-flow: column;
  justify-content: center;
  align-items: center;
  padding-bottom: 20rpx;
}