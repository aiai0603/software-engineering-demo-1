#tabs{
  font-size: 28rpx;
}
.tabs-box{
    display:flex;
    align-items:center;
    justify-content:center;
    height: 80rpx;
    line-height: 80rpx;
    text-align: center
}
.tabs-item.selected {
    color:#f21515;
    border-bottom:2rpx solid #f21515;
}
.tabs-item {
    width: 50%;
    color:#666;
    border-bottom:1rpx solid #e9e9e9;
    background-color: white;
}

.card{
  display: flex;
  flex-flow: row;
 border-radius: 10rpx;
 margin: 30rpx;
  height: 200rpx;
  width: 90%;
  background-color: white;
}
.word{
  display: flex;
  flex-flow: column;
  justify-content: space-between;
  padding: 30rpx 0rpx 30rpx 40rpx;
}
.title{
  font-size: 35rpx;
  font-weight:800 ;
}

.left{
  height: 200rpx;
  width: 200rpx;
  background-color: red;
  border-radius: 10rpx;
}

.left-2{
  height: 200rpx;
  width: 200rpx;
  background-color: #cccccc;
  border-radius: 10rpx;
}


.left-title{
  margin: 40rpx 60rpx 20rpx;
  color: white;
  font-size: 60rpx;
}

.left-under{
 margin-left: 40rpx;
  color: white;
}

