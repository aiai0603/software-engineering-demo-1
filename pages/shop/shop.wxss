/* pages/shop/shop.wxss */
page{
  background-color: #f4eaea;

}

.main{
  background-color: #f21515;
  height: 300rpx;
  display: flex;
  flex-flow: row;
  justify-content: space-between;
  align-items: center;
  padding: 0rpx 50rpx;
  color: white;
}

.button{
  border: white 2rpx solid;
  border-radius: 10rpx;
  padding: 20rpx 50rpx;
  font-weight: 800;
  font-size: 35rpx;
  margin-bottom: 20rpx;
}

.scoreall{
  font-size: 90rpx;
  font-weight: 400;
}

.card-group{
  background-color: white;
  border-radius: 5%;
  width: 95%;
  margin:20rpx;
  display: flex;
  flex-flow: row;
  flex-wrap: wrap;
  justify-content: start;
  align-items: center;
}

.card{
  width: 44%;
  height: 400rpx;
  border-radius: 10rpx;
  border:1rpx solid #cccccc;
  margin:20rpx
}

.img{
  width: 100%;
  height: 285rpx;
}

.title{
  font-weight: 600;
  font-size: 30rpx;
  margin: 10rpx;
}

.score{
  font-size: 25rpx;
  color: #f21515;
  margin: 10rpx;
}